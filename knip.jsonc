{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    // Main application entry points
    "src/main.tsx",
    "src/App.tsx",
    // Include all pages as they might be lazy-loaded
    "src/pages/**/*.{ts,tsx}",
    // Include all components as they might be dynamically imported
    "src/components/**/*.{ts,tsx}",
    // Build and config files
    "vite.config.ts"
  ],
  "project": [
    "src/**/*.{ts,tsx,js,jsx}"
  ],
  "ignore": [
    // Build and config files
    "vite.config.ts",
    "tsconfig*.json",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js",
    "components.json",
    // Environment and deployment files
    ".env*",
    "netlify.toml",
    // Editor config
    "*.code-workspace",
    // Type definitions
    "src/vite-env.d.ts"
  ],
  "ignoreDependencies": [
    // Build tools
    "vite",
    "@vitejs/plugin-react",
    // Deployment tools
    "netlify-cli",
    // CSS processing
    "postcss",
    "autoprefixer",
    "@tailwindcss/*",
    "tailwindcss",
    "tailwindcss-animate",
    // Type packages that might appear unused
    "@types/*",
    // React and core dependencies
    "react",
    "react-dom",
    "react-router-dom",
    // UI Libraries that might be used via string references
    "@radix-ui/*",
    "class-variance-authority",
    "clsx",
    "tailwind-merge",
    // External services that might be initialized elsewhere
    "@supabase/supabase-js",
    "@stripe/stripe-js",
    "@stripe/react-stripe-js",
    "mixpanel-browser",
    "openai",
    // Drag and drop libraries
    "@dnd-kit/core",
    "@dnd-kit/sortable",
    "@hello-pangea/dnd",
    // UI and utility libraries
    "cmdk",
    "date-fns",
    "lodash.debounce",
    "lucide-react",
    "next-themes",
    "react-day-picker",
    "react-dropzone",
    "react-helmet-async",
    "reactflow",
    "sonner",
    "uuid",
    // Rich text editor
    "@tiptap/*"
  ]
} 